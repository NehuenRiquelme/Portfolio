---
import { skills } from "../../../const/const";
import { getIconComponent } from "../../../icons/IconAll.astro";
---

<section class="section-skill">
  <div class="container-skill">
    <h2 class="title-skills" id="skills">Habilidades</h2>
    <ul class="ul-skill">
      {
        skills.map(({ icon, title }) => {
          const IconComponent = getIconComponent(icon);
          return (
            <li class="li-skills">
              {IconComponent && <IconComponent />}
              <p class="p-skill">{title}</p>
            </li>
          );
        })
      }
    </ul>
  </div>
</section>

<style>
    .section-skill {
      position: relative;
      overflow: hidden;
     
      background-image: linear-gradient(
          to right,
          rgba(126, 126, 126, 0.3) -10%,
          transparent 10%
        ),
        linear-gradient(to left, rgba(126, 126, 126, 0.3) -10%, transparent 10%);
      background-color: rgb(26, 29, 41);
    }
    .container-skill {
    position: relative;
    width: 90%;
    color: #FFFBF4;
    padding: 10px 0;
    margin: 0 auto;
    padding: 10px 0;
    height: 100%;
    max-width: 1355px;
  }
  .title-skills {
    position: relative;
    display: block;
    font-size: 27px;
    padding: 10px 0;
    color: #f6f6f9;
    width: 100%;
    font-weight: 800;
    scroll-margin-top: 80px;
  }
  .li-skills {
    display: flex;
    list-style: none;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 10px;
    text-align: center;
  }
  .p-skill {
    padding: 5px 0;
  }
  .ul-skill {
    position: relative;
    display: grid;
    width: 100%;
    align-items: center;
    gap: 15px;
    padding: 40px 0;
    width: 100%;
    overflow: hidden;
    grid-template-columns: repeat(8, 1fr);
  }