---
import { studies } from "../../../const/const";
---

<section class="section_studies">
  <div class="linear-grandient-1"></div>
  <div class="content_studies">
    <h3 class="title-studies" id="studies">Estudios</h3>
    <ul class="ul-studies">
      {
        studies.map(({ date, title, corporation }) => (
          <li class="li-studies">
            <span class="circle" />
            <div>
              <h3>{title}</h3>
              <p>{corporation}</p>
              <span>{date}</span>
            </div>
          </li>
        ))
      }
    </ul>
  </div>
</section>
<style>
  .section_studies {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    background-image:
      radial-gradient(
        circle at 0 0,
        rgba(126, 126, 126, 0.4) -15%,
        transparent 10%
      ),
      /* Esquina superior derecha */
        radial-gradient(
          circle at 100% 0,
          rgba(126, 126, 126, 0.4) -15%,
          transparent 10%
        );
    background-color: rgb(26, 29, 41);
    justify-content: center;
    align-items: center;
  }
</style>
